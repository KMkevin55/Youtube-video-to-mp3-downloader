<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>mp3 convetert</title>
</head>
<body>
    <div class="top-container">
        <form action="/convert-mp3" method="POST" id="form">
            <h1>Youtube mp3 converter</h1>
            <h4>Enter the video ID</h4>
            <div>
                <input type="text" name="videoID" placeholder="Video ID"><button id="submit-btn">Convert</button>
            </div>
        </from>
    </div>

    <div class="bottom-container">
        <% if (typeof success != "undefined" && success) { %>
            <div class="success">
              <p> <%= song_title %> </p>
              <a href="<%= song_link %>" class="download-btnn">Download</a>
            </div>

          <% } else if (typeof success != "undefined" && !success) { %>
            <div class="errors">
              <p> <%= message %> </p>
            </div>
          <% } %>
    
    </div>
    
</body>
</html>